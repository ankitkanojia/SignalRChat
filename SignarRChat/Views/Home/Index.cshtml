@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <div role="form">

                        <form id="frmSingleChat" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input id="username" name="username" type="hidden" />
                                        <select id="userid" name="userid" class="form-control">
                                            <option Value="0">Please Select</option>
                                            <option Value="1">Shivam</option>
                                            <option Value="1">Steeve</option>
                                            <option Value="2">Edward</option>
                                            <option Value="4">Richard</option>
                                            <option Value="5">Phill</option>
                                            <option Value="6">Rayan</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#userid").change(function () {
        $("#username").val($("#userid option:selected").text());
    });
</script>
